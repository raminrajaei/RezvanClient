@page "/adult/{AdultId:int}"
@inherits BitPageBase

<PageTitle>
    @PageTitles.AdultPrintPage.Title
</PageTitle>

<TelerikLoaderContainer Text="در حال بارگزاری اطلاعات بزرگسال" Visible="@IsLoading" />

<div class="personnel-page workhours-page contract-component printbase" style="padding: 1.875rem">

    <!-- Page Heading Title -->
    <section class="page-header-section">
        <div class="page-header-wrapper">
            @if (PageOperationType == OperationType.Filter)
            {
                <TopBar PageName="@($"جزئیات بزرگسال {Adult.FirstName + " "+ Adult.LastName}")" PageDescription="شما می‌توانید از این صفحه اطلاعات کامل بزرگسال را مشاهده و پرینت نمایید" />
            }
            <div class="flex">
                <button class="default-button" style="margin-left: 20px" @onclick="OpenAdultsPage">بازگشت</button>
                <RadzenButton class="primary-button" Text="پرینت" Click="PrintDoc" />
            </div>
        </div>
    </section>


    <section id="toPrint" class="grid-section printbase">
        <div class="page-grid-wrapper printbase">

            <div class="page-box-wrapper mt-3 printable" style="height: 1165px;
                                                                            display: flex;
                                                                            flex-direction: column;
                                                                            justify-content: space-between;">

                <div class="normal-contract">

                    <div class="row header cell-border" style="border: 1px solid #d1cfcf; display: flex; justify-content: space-between; box-shadow: 5px 5px #d1cfcf; margin-bottom: 25px; width: 100%; margin-right: 0;">
                        <div class="col-2">
                            <img class="logo" src="@ImageUrls.Layout.RezvanLogoMain" style="width: 50%; height: 82px; padding-top: 12px; padding-bottom: 12px;" />
                        </div>
                        <div class="title col-8" style="display: flex; flex-direction: column; justify-content: space-evenly; font-weight: bold; letter-spacing: 1px;">
                            <div class="top-center-title-print"> @("موسسه قرآنی رضوان الرسول") </div>
                            <div class="bottom-center-title-print"> @($"فرم ثبت نام ") <strong></strong> </div>
                        </div>
                        <div class="col-2" style="display: flex;
                                                  justify-content: end;
                                                  padding-left: 25px;">
                            <img class="logo" src="@(ClientAppSettings.UrlSettings!.RezvanFileManagerURL+"/"+Adult.PhotoPath)" style="width: 50%; height: 82px; padding-top: 12px; padding-bottom: 12px;" />
                        </div>
                    </div>
                    <div class="column-holder row col-merge column-border ">
                        <div class="column-holder row bio-size " style="background: rgb(250, 243, 243)">
                            <div class="col-2 column-style holder-padding title-bold sm-font-size ">نام و نام خانوادگی</div>
                            <div class="col-2 column-style holder-padding sm-font-size"> @(Adult.FirstName + " " +Adult.LastName) </div>
                            <div class="col-2 column-style holder-padding title-bold sm-font-size ">نام پدر</div>
                            <div class="col-2 column-style holder-padding sm-font-size"> @(Adult.FatherName) </div>
                            <div class="col-2 column-style holder-padding title-bold sm-font-size">تاریخ تولد</div>
                            <div class="col-2 column-style holder-padding sm-font-size">
                                @if (Adult.BirthDate != default)
                                {
                                    @Adult.BirthDate.ToJalaliString()
                                }
                            </div>
                            <div class="col-2 column-style holder-padding title-bold sm-font-size">شماره ملی</div>
                            <div class="col-2 column-style holder-padding sm-font-size sm-font-size" style="padding-right: 0px;">@Adult.IdNo</div>
                        </div>
                        <div class="column-holder row bio-size">
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size title-bold">محل تولد</div>
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size">@Adult.BirthPlace</div>
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size title-bold">محل صدور</div>
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size">@Adult.IssuePlace</div>
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size title-bold"> کد ملی</div>
                            <div class="col-2 sm-font-size holder-padding column-style sm-font-size">@Adult.NationalCode</div>
                        </div>
                    </div>
                    <div class="column-holder row col-merge column-border " style="margin-top: 20px;">
                        <div class="column-holder row bio-size" style="background:rgb(250, 243, 243)">
                            <div class="col-2 column-style holder-padding sm-font-size title-bold">رشته تحصیلی</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.Field</div>
                            <div class="col-2 column-style holder-padding  sm-font-size title-bold">میزان تحصیلات</div>
                            <div class="col-2 column-style holder-padding sm-font-size ">@Adult.EducationLevel</div>
                            <div class="col-2 column-style holder-padding  sm-font-size title-bold">شغل</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.Job</div>
                        </div>
                        <div class="column-holder row bio-size">
                            <div class="col-2 column-style holder-padding  sm-font-size title-bold">وضعیت تاهل</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.MaritalStatusDisplay</div>
                            <div class="col-2 column-style holder-padding  sm-font-size title-bold">نشانی منزل</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.HomeAddress</div>
                            <div class="col-2 column-style holder-padding sm-font-size title-bold">شماره منزل</div>
                            <div class="col-2 column-style holder-padding sm-font-size" style="padding-right: 0px;">@Adult.HomePhone</div>
                        </div>
                        <div class="column-holder row bio-size" style="background: rgb(250, 243, 243)">
                            <div class="col-2 column-style holder-padding  sm-font-size title-bold">کد پستی منزل</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.HomePostalCode</div>
                            <div class="col-2 column-style holder-padding sm-font-size title-bold">نشانی محل کار</div>
                            <div class="col-2 column-style holder-padding sm-font-size"> @Adult.WorkAddress</div>
                            <div class="col-2 column-style holder-padding sm-font-size title-bold">شماره محل کار</div>
                            <div class="col-2 column-style holder-padding sm-font-size " style="padding-right: 0px;">@Adult.WorkPhone</div>

                        </div>
                        <div class="column-holder row bio-size">
                            <div class="col-2 column-style holder-padding sm-font-size title-bold">کد پستی محل کار</div>
                            <div class="col-2 column-style holder-padding sm-font-size">@Adult.WorkPostalCode</div>
                            <div class="col-2 sm-font-size  holder-padding  title-bold ">شماره همراه</div>
                            <div class="col-2 sm-font-size  holder-padding ">@Adult.PhoneNumber</div>
                        </div>
                    </div>
                    <div class="column-holder row col-merge column-border " style="margin-top: 20px;">
                        <div class="column-holder row bio-size" style="background:rgb(250, 243, 243)">
                            <div class="col-5 column-style holder-padding sm-font-size title-bold">آيا تاكنون در دوره تربیت معلم قرآن‌كريم شركت داشته‌ايد؟ در چه رشته‌اي؟در چه سالي و دركدام استان؟</div>
                            <div class="col-7 column-style holder-padding sm-font-size">@(Adult.AdultMoreInfo.ParticipateInQuran == false ?"خیر":"بله، " +Adult.AdultMoreInfo.ParticipateField+"، "+Adult.AdultMoreInfo.ParticipateYear+"، "+Adult.AdultMoreInfo.ParticipateProvince)</div>
                        </div>
                        <div class="column-holder row bio-size" style="background:rgb(250, 243, 243)">
                            <div class="col-5 column-style holder-padding sm-font-size title-bold">آيا تا به حال به عنوان مدرّس يا معلّم، جلسه آموزش قرآن داشته‌ايد؟ درچه سطحي؟‌ درچه زماني ؟</div>
                            <div class="col-7 column-style holder-padding sm-font-size">@(Adult.AdultMoreInfo.ParticipateInQuranAsTeacher == false ?"خیر":"بله، " +Adult.AdultMoreInfo.ParticipateInQuranAsTeacherLevel+"، "+Adult.AdultMoreInfo.ParticipateInQuranAsTeacherDate)</div>
                        </div>
                        <div class="column-holder row bio-size" style="background:rgb(250, 243, 243)">
                            <div class="col-5 column-style holder-padding sm-font-size title-bold">آيا هم‌اكنون در جلسه آموزش قرائت، مفاهيم يا حفظ  قرآن كريم تدريس داريد؟ ‌مشخصات جلسه خود را بنويسيد.</div>
                            <div class="col-7 column-style holder-padding sm-font-size">@(Adult.AdultMoreInfo.CurrentlyTeachingRecitation == false ?"خیر":"بله، " +Adult.AdultMoreInfo.SessionDetails)</div>
                        </div>
                        <div class="column-holder row bio-size" style="background:rgb(250, 243, 243)">
                            <div class="col-5 column-style holder-padding sm-font-size title-bold">4) ميزان آشنايي شما با زبان عربي و علوم قرآني تا چه سطحي مي‌باشد؟ چه كتابهايي در اين زمينه ‌خوانده‌ايد؟</div>
                            <div class="col-7 column-style holder-padding sm-font-size">@(Adult.AdultMoreInfo.FamiliarWithArabicAndQuranDisplay +"، "+Adult.AdultMoreInfo.WhatBooks)</div>
                        </div>
                    </div>
                    <div class="flex justify-content-between" style="margin-top: 70px;
                                                                     width: 53%;
                                                                     margin-right: auto;
                                                                     margin-left: auto;
                                                                     font-weight: bold;">
                        <div>امضا و تاریخ</div>
                    </div>
                </div>

            </div>

            <div class="printable" style="width: 100%; height: 40px;"></div>

        </div>
    </section>
</div>

